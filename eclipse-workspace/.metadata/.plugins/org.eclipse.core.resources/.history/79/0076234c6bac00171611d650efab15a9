package jdbcdemo;

import java.sql.*;

public class Driver {

	public static void main(String[] args) {
		
		Connection myCon;
		PreparedStatement myStmt;
		
		try {
			// 1. Get a connection to the database
			
			myCon = DriverManager.getConnection("jdbc:mysql://localhost:3306/demo", "max", "1994max");
			
			// 2. Create a statement
			
			Statement myStmt = myCon.createStatement();
			
			// 3. Execute SQL query
			
			ResultSet myRs = myStmt.executeQuery("select * from employees");			
			
			// 4. Process result set
			
			display(myRs);
			
		} catch(Exception exc) {
			exc.printStackTrace();
		}

	}
	
	public static void display(ResultSet rs) {
		try {
			while(rs.next()) {
				System.out.println(rs.getString("salary") + ", " + rs.getString("department"));
			} 
		}catch (SQLException e) {
			e.printStackTrace();
		}
	}

}
